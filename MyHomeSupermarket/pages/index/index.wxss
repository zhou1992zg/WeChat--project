.over_box{
  overflow: hidden;
}
.slide-size{
  width: 100%;
  height: 450rpx;
}
.slide-image{
  width: 100%;
  height: 450rpx;
}
.button_box{
  text-align: center;
  margin-top: 50rpx;
}
.button_box button{
  box-shadow: 0px 4px 10px #ccc;
}
.button_box button:nth-child(1){
  margin-right: 30rpx;
}
.button_box button:nth-child(2){
  margin-right: 50rpx;
}
.title{
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
}
.classify{
  width: 310rpx;
  height: 290rpx;
  text-align: center;
  border-radius: 20rpx;
  background: #990000;
  box-shadow: 0px 4px 10px #ccc;
  float: left;
  margin-top: 20rpx;
}
.classify image{
  width: 100%;
  height: 80%;
  border-radius: 20rpx;
}
.classify view{
  font-size: 28rpx;
  color:#fff;
}
.classify_box{
  width: 100%;
  padding: 10rpx 40rpx;
  box-sizing:border-box;
  padding-bottom: 30rpx;
  overflow: hidden;
}
.gouwuche_box{
  width: 110rpx;
  height: 110rpx;
  margin: 120rpx auto;
  display: flex;
  position: relative;
  border-radius: 50%;
  box-shadow: 0px 0px 10px #ccc;
  margin-bottom: 160rpx;
}
.gouwuche{
  width: 60%;
  height: 60%;
  display: block;
  margin: 20rpx auto;
  overflow: hidden;
}
.gouwuche_text{
  font-size: 27rpx;
  position: absolute;
  top: 120rpx;
}
.classify_right:nth-child(even){
  float: right;
}